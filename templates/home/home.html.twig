{% extends "home/base_home.html.twig" %}
{% block body %}
{% block navbar %}
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand mb-0 h1">Pokedex</span>
            {% if app.user %}
                <div class="mb-3">
                    Bienvenido {{ app.user.getPrimerNombre }}, <a class="btn btn-primary" href="{{ path('app_logout') }}"><i class="fas fa-sign-out"></i></a>
                </div>
            {% endif %}  
        </div>
    </nav>
{% endblock %}
    <div>
        <div class="d-flex justify-content-center align-items-center">
            <div class="d-flex flex-row w-25" >
                <input class="w-100 form-control" name="search_pokemon" id="search_pokemon" placeholder="Search a pokemon, boy!!" type="text">
            </div>

            <button id="btnSeachPokemon" class="btn btn-danger w-75">
                Load pokemon
            </button>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <div>
            <img id="imgPokemonFrontView"  src="data:image/png;base64," alt="img pokemon" class="img-fluid">
        </div>
    </div>
    <div id="loader" class="spinner-border text-secondary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
    <div id="listofpokemos">
    
    </div>
{% endblock %}